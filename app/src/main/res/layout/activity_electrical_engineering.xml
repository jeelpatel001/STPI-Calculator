                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:errorEnabled="true">

                            <AutoCompleteTextView
                                android:id="@+id/TE3361902"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/select"
                                android:inputType="none" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="3361903 - IM"
                            android:textAppearance="?attr/textAppearanceLabelLarge" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layoutIM3361903"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:errorEnabled="true">

                            <AutoCompleteTextView
                                android:id="@+id/IM3361903"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/select"
                                android:inputType="none" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="@string/elective_2"
                            android:textAppearance="?attr/textAppearanceLabelLarge" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layoutELECTIVE2"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:errorEnabled="true">

                            <AutoCompleteTextView
                                android:id="@+id/ELECTIVE2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/select"
                                android:inputType="none" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="ELECTIVE - 3"
                            android:textAppearance="?attr/textAppearanceLabelLarge" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layoutELECTIVE3"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:errorEnabled="true">

                            <AutoCompleteTextView
                                android:id="@+id/ELECTIVE3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/select"
                                android:inputType="none" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/CLEAR"
                    style="?attr/materialIconButtonFilledTonalStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:text="CLEAR"
                    app:icon="@drawable/trash_24" />

                <Button
                    android:id="@+id/CALCULATE"
                    style="?attr/materialIconButtonFilledStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:layout_marginStart="2dp"
                    android:layout_weight="1"
                    android:text="CALCULATE"
                    app:icon="@drawable/equal" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>